<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!-- interface-requires gtk+ 3.10 -->
  <menu id="appmenu">
    <section>
	  <item>
        <attribute name="label">Preferences</attribute>
	  </item>
    </section>
    <section>
	  <item>
        <attribute name="label">Quit</attribute>
	  </item>
    </section>
  </menu>
  <object class="GtkWindow" id="GtkMainWindow">
	<property name="window_position">center</property>
	<property name="default_width">800</property>
	<property name="default_height">500</property>
	
	<child type="titlebar">
	  <object class="GtkHeaderBar" id="headerBar">
		<property name="visible">True</property>
		<property name="title">gTorrent</property>
		<property name="show_close_button">True</property>
		
		<child>
		  <object class="GtkButton" id="addTorrentButton">
			<property name="visible">True</property>
			<property name="valign">center</property>
			
			<child>
              <object class="GtkImage" id="addTorrentImage">
				<property name="visible">True</property>
				<property name="icon_size">1</property>
				<property name="icon_name">list-add-symbolic</property>
              </object>
			</child>

          </object>
          <packing>
			<property name="pack_type">start</property>
          </packing>
		</child>

		<child>
		  <object class="GtkMenuButton" id="addMagnetButton">
			<property name="visible">True</property>
			<property name="valign">center</property>
			<property name="use_popover">True</property>
			<child>
              <object class="GtkImage" id="addMagnetImage">
				<property name="visible">True</property>
				<property name="icon_size">1</property>
				<property name="icon_name">insert-link-symbolic</property>
              </object>
			</child>
          </object>
          <packing>
			<property name="pack_type">start</property>
          </packing>
		</child>
		<child>
		  <object class="GtkSeparator" id="vSepOne">
			<property name="visible">True</property>
			<property name="orientation">GTK_ORIENTATION_VERTICAL</property>
		  </object>
		  <packing>
			<property name="pack_type">start</property>
		  </packing>
		</child>
		
		<child>
		  <object class="GtkButton" id="resumeButton">
			<property name="visible">True</property>
			<property name="valign">center</property>

			<child>
              <object class="GtkImage" id="resumeImage">
				<property name="visible">True</property>
				<property name="icon_size">1</property>
				<property name="icon_name">media-playback-start-symbolic</property>
              </object>
			</child>

          </object>
          <packing>
			<property name="pack_type">start</property>
          </packing>
		</child>
		
		<child>
		  <object class="GtkButton" id="pauseButton">
			<property name="visible">True</property>
			<property name="valign">center</property>

			<child>
              <object class="GtkImage" id="pauseImage">
				<property name="visible">True</property>
				<property name="icon_size">1</property>
				<property name="icon_name">media-playback-pause-symbolic</property>
              </object>
			</child>

          </object>
          <packing>
			<property name="pack_type">start</property>
          </packing>
		</child>
		
		<child>
		  <object class="GtkButton" id="deleteButton">
			<property name="visible">True</property>
			<property name="valign">center</property>

			<child>
              <object class="GtkImage" id="deleteImage">
				<property name="visible">True</property>
				<property name="icon_size">1</property>
				<property name="icon_name">edit-delete-symbolic</property>
              </object>
			</child>

          </object>
          <packing>
			<property name="pack_type">start</property>
          </packing>
		</child>
		
		<child>
		  <object class="GtkSeparator" id="vSepTwo">
			<property name="visible">True</property>
			<property name="orientation">GTK_ORIENTATION_VERTICAL</property>
		  </object>
		  <packing>
			<property name="pack_type">start</property>
		  </packing>
		</child>
		
		<child>
		  <object class="GtkButton" id="preferencesButton">
			<property name="visible">True</property>
			<property name="valign">center</property>

			<child>
              <object class="GtkImage" id="preferencesImage">
				<property name="visible">True</property>
				<property name="icon_size">1</property>
				<property name="icon_name">preferences-system-symbolic</property>
              </object>
			</child>

          </object>
          <packing>
			<property name="pack_type">start</property>
          </packing>
		</child>
		
		<child>
		  <object class="GtkButton" id="settingsButton">
			<property name="visible">True</property>
			<property name="valign">center</property>

			<child>
              <object class="GtkImage" id="settingsImage">
				<property name="visible">True</property>
				<property name="icon_size">1</property>
				<property name="icon_name">emblem-system-symbolic</property>
              </object>
			</child>

          </object>
          <packing>
			<property name="pack_type">end</property>
          </packing>
		</child>
	  </object>
	</child>
	
	<child>
	  <object class="GtkPaned" id="panel">
		<property name="visible">True</property>	
		<property name="orientation">GTK_ORIENTATION_VERTICAL</property>
		<property name="position">200</property>
		<child>
		  <object class="GtkScrolledWindow" id="scrolledWindow">
			<property name="visible">True</property>
		  </object>
		</child>

		<child>
		  <object class="GtkBox" id="infobar">
			<property name="visible">True</property>
			<property name="orientation">GTK_ORIENTATION_VERTICAL</property>

			<child>
			  <object class="GtkLabel" id="infoBarTitle">
				<property name="visible">True</property>
			  </object>
			  <packing>
				<property name="pack_type">start</property>
			  </packing>
			</child>

			<child>
			  <object class="GtkNotebook" id="infoBarNotebook">
				<property name="visible">True</property>
				<property name="expand">True</property>

				<!-- Start of Graph -->
				<child>
				  <object class="GtkDrawingArea" id="infobarGraph">
					<property name="visible">True</property>
				  </object>
				</child>

				<child type="tab">
				  <object class="GtkLabel" id="infobarGraphLabel">
					<property name="label">Info Graph</property>
					<property name="visible">True</property>
				  </object>
				</child>
				<!-- End of Graph -->

				<!-- Start of Peers -->
				<child>
				  <object class="GtkScrolledWindow" id="infobarPeersScrolledWindow">
					<property name="visible">True</property>
					<child>
					  <object class="GtkTreeView" id="infoBarPeerTreeView">
						<property name="visible">True</property>
					  </object>
					</child>
				  </object>
				</child>

				<child type="tab">
				  <object class="GtkLabel" id="infobarPeersLabel">
					<property name="label">Peers</property>
					<property name="visible">True</property>
				  </object>
				</child>
				<!-- End of Peers -->

				<!-- Start of Torrent Info -->
				<child>
				  <object class="GtkBox" id="infobarTorrentInfoBox">
					<property name="visible">True</property>
					<property name="orientation">GTK_ORIENTATION_VERTICAL</property>

					<child>
					  <object class="GtkBox" id="infobarPieceBox">
						<property name="visible">True</property>
						<property name="orientation">GTK_ORIENTATION_VERTICAL</property>
						<child>
						  <object class="GtkWidget" id="infobarBlockBar">
							<property name="width_request">0</property>
							<property name="height_request">20</property>
							<property name="visible">True</property>
						  </object>
						  <packing>
							<property name="pack_type">end</property>
						  </packing>
						</child>
					  </object>
					  <packing>
						<property name="pack_type">start</property>
					  </packing>
					</child>

					<child>
					  <object class="GtkSeparator" id="infobarStatusSeparator">
						<property name="orientation">GTK_ORIENTATION_HORIZONTAL</property>
						<property name="visible">True</property>
					  </object>
					  <packing>
						<property name="pack_type">start</property>
					  </packing>
					</child>

					<child>
					  <object class="GtkScrolledWindow" id="infobarStatusScrolledWindow">
						<property name="visible">True</property>
						<property name="expand">True</property>
						<child>
						  <object class="GtkGrid" id="infobarStatusBox">
							<property name="visible">True</property>
						  </object>
						</child>
					  </object>
					  <packing>
						<property name="pack_type">start</property>
					  </packing>
					</child>

				  </object>
				</child>

				<child type="tab">
				  <object class="GtkLabel" id="infobarTorrentInfoLabel">
					<property name="label">Torrent Info</property>
					<property name="visible">True</property>
				  </object>
				</child>
				<!-- End of Torrent Info -->
				<!-- Start of File -->
				<child>
				  <object class="GtkScrolledWindow" id="infobarFilesScrolledWindow">
					<property name="visible">True</property>
					<child>
					  <object class="GtkTreeView" id="infoBarFileTreeView">
						<property name="visible">True</property>
					  </object>
					</child>
				  </object>
				</child>

				<child type="tab">
				  <object class="GtkLabel" id="infobarFilesLabel">
					<property name="label">Files</property>
					<property name="visible">True</property>
				  </object>
				</child>
				<!-- End of File -->
			  </object>
			  <packing>
				<property name="pack_type">end</property>
			  </packing>
			</child>

		  </object>
		</child>
      </object>
	</child>

  </object>
</interface>
